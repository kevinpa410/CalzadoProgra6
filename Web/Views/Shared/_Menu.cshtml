            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav me-auto px-3">
                <li class="nav-item">
                    @Html.ActionLink("Inicio", "index", "home", null, new { @class = "nav-link" });
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Proveedor", "Index", "Proveedor", null, new { @class = "nav-link" });
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Entradas_Salidas", "Index", "Entradas_Salidas", null, new { @class = "nav-link" });
