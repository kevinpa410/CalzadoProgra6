
@model Infrastructure.Models.Proveedor

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Libro</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary"> @Html.DisplayFor(model => model.nombre) </strong>
                    <h3 class="mb-0">@Html.DisplayFor(model => model.nombre) </h3>
