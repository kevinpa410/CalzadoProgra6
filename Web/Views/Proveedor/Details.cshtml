                            {
                                <li>@c.descripcion</li>
                            }
                        </ul>
                    </div>

                    <p class="card-text mb-auto">
                        <b>@Html.DisplayNameFor(model => model.Contacto.nombre):</b> @Html.DisplayFor(model => model.Contacto.nombre)<br />
