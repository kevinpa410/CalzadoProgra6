@model IEnumerable<Infrastructure.Models.Proveedor>

@{
    ViewBag.Title = "Index";
}

<h2>Proveedores</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idProveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idProveedor }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.idProveedor }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idProveedor })
            </td>
        </tr>
    }

</table>

